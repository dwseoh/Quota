{
  "name": "cost-tracker",
  "displayName": "Cost Tracker",
  "description": "Track and optimize costs in your codebase",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  "onLanguage:python",
  "onLanguage:typescript",
  "onLanguage:javascript",
  "onCommand:cost-tracker.showCostDetails",
  "onCommand:cost-tracker.updateUserCount",
  "onCommand:cost-tracker.refresh"
]
,
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cost-tracker.showCostDetails",
        "title": "Show Cost Details"
      },
      {
        "command": "cost-tracker.updateUserCount",
        "title": "Update User Count for Simulation",
        "icon": "$(edit)"
      },
      {
        "command": "cost-tracker.refresh",
        "title": "Refresh Cost Analysis",
        "icon": "$(refresh)"
      },
      {
        "command": "cost-tracker.toggleMockData",
        "title": "Toggle Mock Data (Testing)"
      },
      {
        "command": "cost-tracker.showCallDetails",
        "title": "Show Call Details"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cost-tracker-panel",
          "name": "Cost Tracker"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "cost-tracker.refresh",
          "when": "view == cost-tracker-panel",
          "group": "navigation"
        },
        {
          "command": "cost-tracker.updateUserCount",
          "when": "view == cost-tracker-panel",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "cost-tracker.showCallDetails",
          "when": "view == cost-tracker-panel && viewItem == call_item",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
