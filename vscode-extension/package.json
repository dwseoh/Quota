{
  "name": "cost-tracker",
  "displayName": "Cost Tracker",
  "description": "Track and optimize costs in your codebase",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cost-tracker.showCostDetails",
        "title": "Show Cost Details"
      },
      {
        "command": "cost-tracker.updateUserCount",
        "title": "Update User Count for Simulation"
      },
      {
        "command": "cost-tracker.refresh",
        "title": "Refresh Cost Analysis"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cost-tracker-panel",
          "name": "Cost Tracker"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "preinstall": "echo 'Configuring C++20 for tree-sitter...' && export CXXFLAGS='-std=c++20'"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "tree-sitter": "^0.25.0",
    "tree-sitter-python": "^0.25.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@typescript-eslint/parser": "^8.52.0",
    "dotenv": "^17.2.3"
  }
}